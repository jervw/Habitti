<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="visible">

    <LinearLayout
        android:id="@+id/profile"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/cerulean"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/userCharacterImage"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />

                <ImageView
                    android:id="@+id/userHairsImage"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />

                <ImageView
                    android:id="@+id/userClothesImage"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />

            </RelativeLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/username"
                android:layout_width="191dp"
                android:layout_height="52dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="25dp"
                android:gravity="left"
                android:text="@string/username"
                android:textColor="#fff"
                android:textSize="21sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/levelText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Level"
                android:textColor="#fff"
                android:textSize="18sp"
                android:textStyle="bold" />

                <ProgressBar
                    android:id="@+id/progress_limit"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:indeterminate="false"
                    android:max="100"
                    android:maxHeight="10dip"
                    android:minHeight="10dip"
                    android:progress="50"
                    android:progressDrawable="@drawable/custom_progressbar" />

            <Button
                android:id="@+id/ShopBtn"
                android:layout_width="168dp"
                android:layout_height="wrap_content"
                android:text="Shop" />

            <Button
                android:id="@+id/buttonDevAddDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dev Add Day"
                tools:visibility="visible" />

        </LinearLayout>
    </LinearLayout>

    <devs.mulham.horizontalcalendar.HorizontalCalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:textColorSelected="@color/grey"/>


    <ListView
        android:id="@+id/listViewHabbits"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:tag="listView">

    </ListView>

</LinearLayout>



