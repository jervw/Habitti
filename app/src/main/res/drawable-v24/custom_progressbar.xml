<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="10dp" />

            <gradient
                android:angle="-90"
                android:centerColor="#616161"
                android:centerY="0.75"
                android:endColor="#757575"
                android:startColor="#424242" />

            <size
                android:width="15dp"
                android:height="15dp"/>

            <corners
                android:radius="6dp"/>
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip>

            <layer-list>

                <item
                    android:bottom="1dp"
                    android:left="1dp"
                    android:top="1dp"
                    android:right="1dp">

            <shape>
                <corners android:radius="4dp" />

                <gradient
                    android:angle="-90"
                    android:centerColor="#43a047"
                    android:endColor="#388e3d"
                    android:startColor="#4caf50" />
            </shape>
                </item>
            </layer-list>
        </clip>
    </item>

</layer-list>