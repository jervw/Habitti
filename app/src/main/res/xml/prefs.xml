<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        app:title="@string/settings"
        app:iconSpaceReserved="false">

    <SwitchPreferenceCompat
        app:key="notifications"
        app:iconSpaceReserved="false"
        app:title="Habit reminders"
        app:summaryOff="Reminders are currently off"
        app:summaryOn="Reminders are currently on"/>

    <Preference
        app:key="tutorial"
        app:title="How to use"
        app:iconSpaceReserved="false"/>

    <Preference
        app:key="creditsButton"
        app:title="Credits"
        app:iconSpaceReserved="false"
        app:summary="Wizards behind the app"/>


    </PreferenceCategory>
</PreferenceScreen>